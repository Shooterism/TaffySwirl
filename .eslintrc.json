{
  "env": {
    "es2020": true,
    "node": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "rules": {
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "indent": ["error", 2, { "SwitchCase": 1 }],
    "require-await": "warn",
    "no-lonely-if": "warn",
    "max-len": ["warn", 200],
    "wrap-iife": ["warn", "inside"],
    "no-unused-vars": ["warn", { "args": "all" }]
  },
  "globals": {
    "client": "writable"
  }
}
